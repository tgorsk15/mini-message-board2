<html>
    <head>
        <title>HomePage</title>
        <link rel="stylesheet" href="./index.css">
    </head>
    <body>
        <% for (let i = 0; i < messages.length; i++) { %>
            <% const messageIndex = [i] %>
            <h4 class="message-user">
                <%= messages[i].user %>
            </h4>
            <div class="content-container">
                <p class="message-content">
                    <%= messages[i].text %>
                </p>
                <p class="message-time">
                    on <%= messages[i].added %>
                </p>
            </div>
            <a href="/detail/<%= messageIndex %>" class="open-message-link">Open</a>
            
        <% } %>
        <a href="/new" class="new-message-link">Send a Message</a>
    </body>
</html>